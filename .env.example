# ==============================
# üåê APP CONFIGURATION
# ==============================
NODE_ENV=YOUR_ENVIRONMENT
PORT=PORT
BASE_URL=http://HOST:PORT

# ==============================
# üóÑ DATABASE (PostgreSQL via Prisma)
# ==============================
DATABASE_URL=postgresql://USERNAME:USER_PASSWORD@HOST:PORT/DB_NAME?schema=public

# ==============================
# üîê AUTHENTICATION & SECURITY
# ==============================
# JWT secret key used for signing tokens
JWT_SECRET=your_super_secret_jwt_key

# Token expiry time (e.g., 1h, 24h, 7d)
expiresIn=1h

# ==============================
# üß™ TESTING
# ==============================
# Use a separate database for testing
DATABASE_URL=postgresql://USERNAME:TEST_PASSWORD@HOST:PORT/DB_NAME?schema=public
NODE_ENV=TEST_ENVIRONMENT

# ==============================
# üìä SWAGGER DOCS
# ==============================
SWAGGER_TITLE=PROJECT_NAME
SWAGGER_DESCRIPTION=PROJECT_DESCRIPTION
SWAGGER_VERSION=VERSION_DOWNLOAD

# ==============================
# üß± OPTIONAL (for Dockerized environments)
# ==============================
POSTGRES_USER=USERNAME
POSTGRES_PASSWORD=USER_PASSWORD
POSTGRES_DB=DB_NAME
POSTGRES_HOST=HOST
POSTGRES_PORT=PORT